source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'bootstrap-sass'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :production do
  gem 'thin'
end

group :development, :test do
    gem 'rspec'
    gem 'rspec-rails'
    gem 'guard'
    gem 'guard-rspec'
    gem 'capybara'
end
